<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>
	
	<parent>
		<groupId>org.mobicents.servers.jainslee.core</groupId>
		<artifactId>parent</artifactId>
		<version>2.0.0-SNAPSHOT</version>
	</parent>
	
	<artifactId>sar</artifactId>
	
	<name>Mobicents :: JAIN SLEE Server :: Core :: ${pom.artifactId}</name>
		
	<dependencies>
	
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>transaction</artifactId>
			<version>${pom.version}</version>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>cache</artifactId>
			<version>${pom.version}</version>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>jar</artifactId>
			<version>${pom.version}</version>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ant-tasks</artifactId>
			<version>${pom.version}</version>
			<scope>compile</scope>			
		</dependency>
				
		<!-- jslee -->
		<dependency>
			<groupId>javax.slee</groupId>
			<artifactId>jain-slee</artifactId>
			<version>1.1</version>
			<scope>compile</scope>
		</dependency>
					
		<!-- commons -->
		<dependency>
			<groupId>commons-pool</groupId>
			<artifactId>commons-pool</artifactId>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>commons-jxpath</groupId>
			<artifactId>commons-jxpath</artifactId>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>jgroups</groupId>
			<artifactId>jgroups</artifactId>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>org.jboss.cache</groupId>
			<artifactId>jbosscache-core</artifactId>
			<version>3.1.0-SNAPSHOT</version>
			<!--<version>3.0.2.GA</version>-->
			<scope>compile</scope>
		</dependency>
		
		<dependency>
         <groupId>jgroups</groupId>
         <artifactId>jgroups</artifactId>
         <version>2.6.7.GA</version>
         <scope>compile</scope>
      </dependency>
       
	</dependencies>
	<build>
		<finalName>mobicents.sar</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>
							src/main/assemble/descriptor.xml
						</descriptor>
					</descriptors>
					<appendAssemblyId>false</appendAssemblyId>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id><!-- this is used for inheritance merges -->
						<phase>package</phase><!-- append to the packaging phase. -->
						<goals>
							<goal>directory-inline</goal><!-- goals == mojos -->
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-sar-resources</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>								
								<copy file="README.txt" todir="${jboss.home}/server/${node}" />
								<copy file="bin/java.policy" todir="${jboss.home}/bin" />
								<copy overwrite="true" file="resources/pictures/mobicents-logo.gif" tofile="${jboss.home}/server/${node}/deploy/jmx-console.war/images/logo.gif" />
								<copy todir="${jboss.home}/docs/licenses">
									<fileset file="LICENSES/*" />
								</copy>
								<copy overwrite="true" file="../rar/target/rar-${pom.version}.rar" tofile="target/${build.finalName}.dir/${build.finalName}/mobicents.rar" />
								<copy todir="${jboss.home}/server/${node}/deploy">
									<fileset dir="target/${build.finalName}.dir">
										<include name="${build.finalName}/**" />
									</fileset>
								</copy>		
								<!-- <copy todir="${jboss.home}/server/${node}/deploy">
									<fileset dir="xml/jboss-cache">
										<include name="mobicents-jbosscache-*-service.xml" />
									</fileset>
								</copy>
								-->						
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>clean-sar-resources</id>
						<phase>clean</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>							
								<delete failonerror="false" includeemptydirs="true">
									<fileset dir="${jboss.home}/server/${node}/deploy/${build.finalName}" />
								</delete>

								<delete failonerror="false" includeemptydirs="true">
									<fileset dir="${jboss.home}/server/${node}/tmp/deploy">
										<include name="tmpDUJars**/*.*" />
										<include name="tmpDUJars*" />
									</fileset>
								</delete>
								<delete failonerror="false" includeemptydirs="true">
									<fileset dir="${jboss.home}/server/${node}/tmp/deploy">
										<include name="slee-ds.xml" />
										<include name="mobicents.rar" />
									</fileset>									
								</delete>
								<!-- <delete failonerror="false" >
									<fileset dir="${jboss.home}/server/${node}/deploy">
										<include name="mobicents-jbosscache-*-service.xml" />
									</fileset>									
								</delete>
								-->
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
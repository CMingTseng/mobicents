				<include>org.mobicents.servers.media:mms-spi</include>
				<include>org.mobicents.servers.media:mms-impl</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<componentDescriptors>
		<componentDescriptor>
			src/main/assembly/common.xml
		</componentDescriptor>
	</componentDescriptors>

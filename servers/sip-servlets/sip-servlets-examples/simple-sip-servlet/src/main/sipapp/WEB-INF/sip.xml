<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sip-app PUBLIC "-//Java Community Process//DTD SIP Application 1.0//EN" "http://www.jcp.org/dtd/sip-app_1_0.dtd">

<sip-app>
	<display-name>Simple Sip Servlet</display-name>
	<description>Simple Sip Servlet</description>

	<servlet>
		<servlet-name>SimpleSipServlet</servlet-name>
		<display-name>SimpleSipServlet</display-name>
		<description>Simple SIP servlet</description>
		<servlet-class>
			org.open.servlet.sip.example.SimpleSipServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>SimpleSipServlet</servlet-name>
		<pattern>
			<and>
				<equal>
					<var>request.method</var>
					<value>INVITE</value>
				</equal>
			</and>
		</pattern>
	</servlet-mapping>

	<listener>
		<listener-class>
			org.open.servlet.sip.example.SimpleSipServlet
		</listener-class>
	</listener>
</sip-app>
<?xml version="1.0" encoding="utf-8"?>
<project name="Release_build" default="deploy-all">

  <property name="home" value="${ant.file.Release_build}/../" />
  
  <property name="jboss.home" value="${home}../../@JBOSS_VERSION@/" />
  
  <target name="deploy-all-jmx">
    <ant antfile="${home}../../resources/sip/build.xml" target="deploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}/antfile="${home}/proxy-with-initial-invite-du-management.xml" target="deploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="undeploy-all-jmx">
    <ant antfile="${home}/antfile="${home}/proxy-with-initial-invite-du-management.xml" target="undeploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../resources/sip/build.xml" target="undeploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="deploy-all">
    <ant antfile="${home}../../resources/sip/build.xml" target="deploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}/antfile="${home}/proxy-with-initial-invite-du-management.xml" target="deploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="undeploy-all">
    <ant antfile="${home}/antfile="${home}/proxy-with-initial-invite-du-management.xml" target="undeploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../resources/sip/build.xml" target="undeploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <!-- SPECIAL FOR CC2 AND MMS DEMO EXAMPLES-->

	<target name="deploy-all-jmx-proxy-without-initial-invite">
    <ant antfile="${home}../../resources/sip/build.xml" target="deploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}/antfile="${home}/proxy-without-initial-invite-du-management.xml" target="deploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="undeploy-all-jmx-proxy-without-initial-invite">
    <ant antfile="${home}/antfile="${home}/proxy-without-initial-invite-du-management.xml" target="undeploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../resources/sip/build.xml" target="undeploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="deploy-all-proxy-without-initial-invite">
    <ant antfile="${home}../../resources/sip/build.xml" target="deploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}/antfile="${home}/proxy-without-initial-invite-du-management.xml" target="deploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="undeploy-all-proxy-without-initial-invite">
    <ant antfile="${home}/antfile="${home}/proxy-without-initial-invite-du-management.xml" target="undeploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../resources/sip/build.xml" target="undeploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>
  
</project>

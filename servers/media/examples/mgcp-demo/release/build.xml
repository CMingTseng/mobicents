<?xml version="1.0" encoding="utf-8"?>
<project name="Release_build" default="deploy-all">

  <property name="home" value="${ant.file.Release_build}/../" />

  <property name="jboss.home" value="${home}../../jboss-4.2.2.GA/" />

  <target name="deploy-all-jmx">
    <ant antfile="${home}../../resources/sip/build.xml" target="deploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../media-server/controllers/mgcp/build.xml" target="deploy-all-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../examples/mgcp-demo/du-management.xml" target="deploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="undeploy-all-jmx">
    <ant antfile="${home}../../examples/mgcp-demo/du-management.xml" target="undeploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../media-server/controllers/mgcp/build.xml" target="undeploy-all-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../resources/sip/build.xml" target="undeploy-jmx" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="deploy-all">
	  <ant antfile="${home}../../examples/sip-services/build.xml" target="deploy-all-proxy-without-initial-invite" inheritAll="false">
		  <property name="jboss.home" value="${jboss.home}" />
    </ant>	  
    <ant antfile="${home}../../media-server/controllers/mgcp/build.xml" target="deploy-all" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
    <ant antfile="${home}../../examples/mgcp-demo/du-management.xml" target="deploy" inheritAll="false">
      <property name="jboss.home" value="${jboss.home}" />
    </ant>
  </target>

  <target name="undeploy-all">

	  <ant antfile="${home}../../examples/mgcp-demo/du-management.xml" target="undeploy" inheritAll="false">
		  <property name="jboss.home" value="${jboss.home}" />
      </ant>
      <ant antfile="${home}../../examples/sip-services/build.xml" target="undeploy-all-proxy-without-initial-invite" inheritAll="false">
	      <property name="jboss.home" value="${jboss.home}" />
    </ant>      
    <ant antfile="${home}../../media-server/controllers/mgcp/build.xml" target="undeploy-all" inheritAll="false">
	    <property name="jboss.home" value="${jboss.home}" />
	  </ant>
  </target>

</project>

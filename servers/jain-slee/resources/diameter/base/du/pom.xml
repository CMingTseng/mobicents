<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
>
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<artifactId>base-parent</artifactId>
		<groupId>org.mobicents.resources.diameter</groupId>
		<version>1.2.0.GA-SNAPSHOT</version>
	</parent>

	<artifactId>diameter-base-ra-DU</artifactId>

	<name>Mobicents :: Resources :: ${pom.artifactId}</name>

	<dependencies>
		<!-- components -->
		<dependency>
			<groupId>org.mobicents.resources.diameter</groupId>
			<artifactId>base-events</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.resources.diameter</groupId>
			<artifactId>base-ratype</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.resources.diameter</groupId>
			<artifactId>base-ra</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<!-- libs -->
		<dependency>
			<artifactId>jdiameter-server-api</artifactId>
			<groupId>jdiameter</groupId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>jdiameter-server-impl</artifactId>
			<groupId>jdiameter</groupId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>picocontainer</artifactId>
			<groupId>picocontainer</groupId>
			<scope>runtime</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.mobicents.tools</groupId>
				<artifactId>maven-du-plugin</artifactId>
				<version>${mobicents.tools.mavenplugin.du.version}</version>
				<extensions>true</extensions>
				<configuration />
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-DU</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy
									overwrite="true"
									file="target/${project.build.finalName}.jar"
									todir="${env.JBOSS_HOME}/server/${node}/deploy"
								/>
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>undeploy-DU</id>
						<phase>clean</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete file="${env.JBOSS_HOME}/server/${node}/deploy/${project.build.finalName}.jar" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>

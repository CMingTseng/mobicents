<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.mobicents.servers.media.controllers</groupId>
		<artifactId>mobicents-media-server-controllers-parent</artifactId>
		<version>1.0.0.BETA3</version>	
	</parent>

	<artifactId>msc-parent</artifactId>

	<packaging>pom</packaging>

	<name>Mobicents Media Server Controllers :: ${pom.artifactId}</name>

	<modules>
		<module>events</module>
		<module>ratype</module>
		<module>ra</module>
		<module>du</module>
	</modules>

	<profiles>
		<profile>
			<id>release</id>
			<properties>
				<release.dir>${basedir}/../../release/${release.name}/resources/media</release.dir>
			</properties>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true" todir="${release.dir}">
											<fileset dir="${basedir}/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include name="*.properties" />
											</fileset>
										</copy>
										<copy overwrite="true" file="${basedir}/du/target/build.xml" tofile="${release.dir}/du-management.xml" />
										<copy overwrite="true" file="${basedir}/release/build.xml" todir="${release.dir}">
                      <filterset>
                        <filter token="JBOSS_VERSION" value="jboss-${jboss.version}" />
                        <filter token="JBOSS_NODE" value="${node}" />
                      </filterset>
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
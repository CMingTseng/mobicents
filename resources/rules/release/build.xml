<?xml version="1.0" encoding="utf-8"?>
<project name="Release_build" default="deploy">

  <property name="home" value="${ant.file.Release_build}/../" />
  
  <property environment="env"/>
  <property name="deploy.dir" value="${env.JBOSS_HOME}/server/default/deploy/" />

  <target name="deploy-jmx">
		<copy overwrite="true" todir="${deploy.dir}" file="${home}/rules-management.sar" />
    <ant antfile="${home}../../resources/rules/du-management.xml" target="deploy-jmx" inheritAll="false" />
  </target>

  <target name="undeploy-jmx">
    <ant antfile="${home}../../resources/rules/du-management.xml" target="undeploy-jmx" inheritAll="false" />
		<delete file="${deploy.dir}/rules-management.sar" />
  </target>

  <target name="deploy">
		<copy overwrite="true" todir="${deploy.dir}" file="${home}/rules-management.sar" />
    <ant antfile="${home}../../resources/rules/du-management.xml" target="deploy" inheritAll="false" />
   </target>

  <target name="undeploy">
    <ant antfile="${home}../../resources/rules/du-management.xml" target="undeploy" inheritAll="false" />
		<delete file="${deploy.dir}/rules-management.sar" />
  </target>

</project>

<?xml version="1.0" encoding="utf-8"?>
<project name="Example_build" default="deploy-all">

  <property name="home" value="${ant.file.Example_build}/../" />

  <target name="init">
    <condition property="executable" value="mvn.bat">
      <os family="windows"/>
    </condition>
    
    <property name="executable" value="mvn" />
  </target>

  <target name="deploy-all" depends="init">
    <exec executable="${executable}" dir="${home}/../../resources/sip/">
      <arg value="install"/>
    </exec>

    <exec executable="${executable}" dir="${home}/../../servers/media/">
      <arg value="install"/>
    </exec>

    <exec executable="${executable}" dir="${home}/../../resources/media/">
      <arg value="install"/>
    </exec>

    <exec executable="${executable}" dir="${home}/../../resources/persistence/">
      <arg value="install"/>
    </exec>

    <exec executable="${executable}" dir="${home}/../../resources/tts/">
      <arg value="install"/>
    </exec>

    <exec executable="${executable}" dir="${home}">
      <arg value="install"/>
    </exec>
  </target>

  <target name="undeploy-all" depends="init">
    <exec executable="${executable}" dir="${home}">
      <arg value="clean"/>
    </exec>

    <exec executable="${executable}" dir="${home}/../../resources/media/">
      <arg value="clean"/>
    </exec>

    <exec executable="${executable}" dir="${home}/../../servers/media/">
      <arg value="clean"/>
    </exec>
    
    <exec executable="${executable}" dir="${home}/../../resources/persistence/">
      <arg value="clean"/>
    </exec>
    
    <exec executable="${executable}" dir="${home}/../../resources/tts/">
      <arg value="clean"/>
    </exec>
    
    <exec executable="${executable}" dir="${home}/../../resources/sip/">
      <arg value="clean"/>
    </exec>
  </target>

</project>

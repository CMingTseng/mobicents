<?xml version="1.0" encoding="UTF-8"?>

<sip-app>
	<app-name>org.mobicents.servlet.sip.testsuite.SecureServlet</app-name>
	<display-name>Secure Servlet</display-name>
	<description>Secure Servlet</description>
	
	<main-servlet>
		SecureServlet
	</main-servlet>

	<servlet>
		<servlet-name>SecureServlet</servlet-name>
		<display-name>SecureServlet</display-name>
		<description>SecureServlet</description>
		<servlet-class>
			org.mobicents.servlet.sip.testsuite.SecureServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<listener>
		<listener-class>
			org.mobicents.servlet.sip.testsuite.SecureServlet
		</listener-class>
	</listener>
	
	<security-constraint>
	   <display-name>MyServlet Security Constraint</display-name>
	      <resource-collection>
	          <resource-name>SecureServlete</resource-name>
	          <description>Securing Teh SecureServlet</description>
	          <servlet-name>SecureServlet</servlet-name>
	          <sip-method>INVITE</sip-method>   
	     </resource-collection>   
	     <auth-constraint>      
	           <role-name>testrole</role-name>  
	     </auth-constraint>
	 </security-constraint>
	 
	 <login-config> 
         <auth-method>DIGEST</auth-method> 
         <realm-name>sip-servlets-realm</realm-name> 
   </login-config> 

	
</sip-app>
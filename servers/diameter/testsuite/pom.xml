<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">	
	<modelVersion>4.0.0</modelVersion>
	
  <parent>
    <groupId>org.mobicents.servers.diameter</groupId>
  	<artifactId>diameter-parent</artifactId>
  	<version>1.0.0.BETA1-SNAPSHOT</version>
	</parent>

  <groupId>org.mobicents.servers.diameter.testsuite</groupId>
	<artifactId>testsuite-parent</artifactId>
	
	<name>Mobicents :: Diameter Testsuite :: ${pom.artifactId}</name>

  <properties>
    <!-- Mobicents Diameter Components Versions -->
    <mobicents.diameter.jdiameter.version>1.5.0.1-build187-SNAPSHOT</mobicents.diameter.jdiameter.version>
    <mobicents.diameter.mux.version>1.0.0.BETA5-SNAPSHOT</mobicents.diameter.mux.version>
    <mobicents.diameter.resources.base.version>1.0.0.BETA6-SNAPSHOT</mobicents.diameter.resources.base.version>
    <mobicents.diameter.resources.cca.version>1.0.0.BETA4-SNAPSHOT</mobicents.diameter.resources.cca.version>
    <mobicents.diameter.resources.sh-client.version>1.0.0.BETA5-SNAPSHOT</mobicents.diameter.resources.sh-client.version>
    <mobicents.diameter.resources.sh-server.version>1.0.0.BETA3-SNAPSHOT</mobicents.diameter.resources.sh-server.version>
    <mobicents.diameter.resources.ro.version>1.0.0.BETA2-SNAPSHOT</mobicents.diameter.resources.ro.version>
    <mobicents.diameter.resources.rf.version>1.0.0.BETA2-SNAPSHOT</mobicents.diameter.resources.rf.version>
    <!-- Other Mobicents Components Versions -->
    <mobicents.servers.jainslee.version>1.2.5.GA</mobicents.servers.jainslee.version>
    <mobicents.tools.mavenplugin.du.version>1.0.0.BETA2</mobicents.tools.mavenplugin.du.version>
    <mobicents.tools.mavenplugin.eclipse.version>1.0.0.BETA2</mobicents.tools.mavenplugin.eclipse.version>
  </properties>

	<dependencies>
		<dependency>
			<groupId>org.mobicents.servers.diameter.resources</groupId>
			<artifactId>rf-ra</artifactId>
			<version>${mobicents.diameter.resources.rf.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.servers.diameter.resources</groupId>
			<artifactId>ro-ra</artifactId>
			<version>${mobicents.diameter.resources.ro.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.servers.diameter.resources</groupId>
			<artifactId>sh-server-ra</artifactId>
			<version>${mobicents.diameter.resources.sh-server.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.servers.diameter.resources</groupId>
			<artifactId>sh-client-ra</artifactId>
			<version>${mobicents.diameter.resources.sh-client.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.servers.diameter.resources</groupId>
			<artifactId>cca-ra</artifactId>
			<version>${mobicents.diameter.resources.cca.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.servers.diameter.resources</groupId>
			<artifactId>base-ra</artifactId>
			<version>${mobicents.diameter.resources.base.version}</version>
		</dependency>
    <dependency>
		  <groupId>org.mobicents.servers.diameter</groupId>
		  <artifactId>mobicents-diameter-mux-jar</artifactId>
		  <version>${mobicents.diameter.mux.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.mobicents.servers.diameter</groupId>
      <artifactId>jdiameter-api</artifactId>
      <version>${mobicents.diameter.jdiameter.version}</version>
    </dependency>
    <dependency>
      <groupId>org.mobicents.servers.diameter</groupId>
      <artifactId>jdiameter-impl</artifactId>
      <version>${mobicents.diameter.jdiameter.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <artifactId>picocontainer</artifactId>
      <groupId>picocontainer</groupId>
      <version>${picocontainer.version}</version>
    </dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>diameter-${pom.artifactId}-${pom.version}</finalName>
		
		<plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>**/*$*</exclude>
            <exclude>**/TestingFramework.java</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
		
		<resources>
			<resource>
        <directory>src/test/resources</directory>
      </resource>
    </resources>
  </build>
	
</project>

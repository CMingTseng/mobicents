<?xml version="1.0" encoding="UTF-8"?>

<deployment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:jboss:bean-deployer:2.0 bean-deployer_2_0.xsd"
	xmlns="urn:jboss:bean-deployer:2.0">

	<bean name="Mobicents.MMS.MgcpControllerService"
		class="org.mobicents.media.server.ctrl.mgcp.MgcpController">
		<annotation>@org.jboss.aop.microcontainer.aspects.jmx.JMX(name="media.mobicents:controller=mgcp",exposedInterface=org.mobicents.media.server.ctrl.mgcp.MgcpControllerMBean.class,registerDirectly=true)</annotation>
		<property name="bindAddress">${jboss.bind.address}</property>
		<property name="port">2727</property>
	</bean>

</deployment>
							</addDefaultImplementationEntries>
						
						 -->
						<manifest>
							<addClasspath>true</addClasspath>
                            <!--  <classpathPrefix>repository</classpathPrefix>-->
						</manifest>
						<manifestEntries>
							<mode>development</mode>
							<url>${pom.url}</url>
							<key>value</key>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>

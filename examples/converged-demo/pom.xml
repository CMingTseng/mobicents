<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>mobicents</artifactId>
		<groupId>org.mobicents</groupId>
		<version>1.2.0.BETA3-SNAPSHOT</version>
	</parent>

	<artifactId>converged-demo-parent</artifactId>
	<groupId>org.mobicents.examples</groupId>
	<version>1.2.0.BETA3-SNAPSHOT</version>

	<packaging>pom</packaging>
	<name>Mobicents :: Examples :: ${pom.artifactId}</name>

	<modules>
		<module>utility</module>
		<module>pojo</module>
		<module>slee/events</module>
		<module>slee/events-du</module>
		<module>web/jar</module>
		<module>web/war</module>
		<module>web/ear</module>
		<module>slee/callcontrol-sbb</module>
		<module>slee/admin-sbb</module>
		<module>slee/orderdeliverdate-sbb</module>
		<module>slee/ordershipdate-sbb</module>
		<module>slee/user-sbb</module>
		<module>slee/services-du</module>
	</modules>

	<profiles>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true"
											todir="${basedir}/../../release/${release.name}/examples/converged-demo">
											<fileset
												dir="${basedir}/slee/events-du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
											<fileset
												dir="${basedir}/slee/services-du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
										</copy>
										<copy overwrite="true"
											file="${basedir}/web/ear/datasource/ShoppingDemo-dev-ds.xml"
											todir="${basedir}/../../release/${release.name}/examples/converged-demo" />
										<copy overwrite="true"
											file="${basedir}/web/ear/target/ShoppingDemo.ear"
											todir="${basedir}/../../release/${release.name}/examples/converged-demo" />
										<copy overwrite="true"
											file="${basedir}/slee/events-du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/examples/converged-demo/events-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/slee/services-du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/examples/converged-demo/services-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/release/build.xml"
											todir="${basedir}/../../release/${release.name}/examples/converged-demo">
											<filterset>
												<filter token="JBOSS_VERSION" value="jboss-${jboss.version}"/>
                      	<filter token="JBOSS_NODE" value="${node}"/>
											</filterset>
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>

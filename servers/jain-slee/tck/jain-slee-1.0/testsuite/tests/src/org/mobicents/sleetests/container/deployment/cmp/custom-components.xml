<?xml version="1.0"?>

<project name="JAIN SLEE Custom Tests" default="package">
	<property name="test.dir" value="/org/mobicents/sleetests/container/deployment/cmp"/>
	<property name="test.src" value="${tck.source}/${test.dir}"/>
	<target name="package">
		<echo>classes.sleetests=${classes.sleetests}</echo>
		<echo>test.src=${test.src}</echo>
		<echo>jars.deployable-units=${jars.deployable-units}</echo>
		<deployablejar destfile="${jars.deployable-units}/org.mobicents.sleetests.container.deployment.cmp.SbbAndSuperClassWithCMPsTest-du.jar" 
      servicexml="${test.src}/META-INF/SbbAndSuperClassWithCMPsTest-service-jar.xml">
			<sbbjar sbbjarxml="${test.src}/META-INF/SbbAndSuperClassWithCMPsTest-sbb-jar.xml" classpath="${classes.sleetests}">
				<fileset dir="${classes.sleetests}">
					<include name="org/mobicents/sleetests/container/deployment/cmp/**/*" />
				</fileset>
			</sbbjar>
		</deployablejar>
	</target>
</project>

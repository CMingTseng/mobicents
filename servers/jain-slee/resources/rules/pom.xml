<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<artifactId>mobicents-jainslee-server</artifactId>
		<groupId>org.mobicents</groupId>
		<version>1.2.0.GA-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<artifactId>rules-parent</artifactId>
	<groupId>org.mobicents.resources</groupId>

	<name>Mobicents :: Resources :: ${pom.artifactId}</name>

	<modules>
		<module>sar</module>
		<module>events</module>
		<module>ratype</module>
		<module>ra</module>
		<module>du</module>
	</modules>

	<profiles>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true" todir="${basedir}/../../release/${release.name}/resources/rules">
											<fileset dir="${basedir}/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include name="*.properties" />
											</fileset>
											<fileset dir="${basedir}/sar/target">
												<include name="*.sar" />
											</fileset>
										</copy>
										<copy overwrite="true" file="${basedir}/du/target/build.xml" tofile="${basedir}/../../release/${release.name}/resources/rules/du-management.xml" />
										<copy overwrite="true" file="${basedir}/release/build.xml" todir="${basedir}/../../release/${release.name}/resources/rules">
                      <filterset>
                        <filter token="JBOSS_VERSION" value="jboss-${jboss.version}" />
                        <filter token="JBOSS_NODE" value="${node}" />
                      </filterset>
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
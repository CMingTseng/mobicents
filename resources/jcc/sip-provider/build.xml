<?xml version="1.0" encoding="UTF-8"?>

<project name="JCC_for_SIP" default="deploy" basedir=".">

	<property name="dir.root" value="./" />
	<property name="dir.lib" value="${dir.root}/lib" />
	<property name="dir.classes" value="${dir.root}/build" />
	<property name="dir.dist" value="${dir.root}/dist" />
	<property name="dir.src" value="${dir.root}/src" />

	<import file="$${ant.file.JCC_for_SIP}/../../../../core/xml/ant/mobicents-ant-common-properties.xml" />

	<path id="path.compile">
		<fileset dir="${dir.lib}">
			<include name="*.jar" />
		</fileset>
		<path refid="mobicents.core.classpath" />
	</path>

	<target name="clean">
		<delete dir="${dir.classes}/" />
		<delete dir="${dir.dist}" />
	</target>

	<target name="init">
		<mkdir dir="${dir.classes}" />
		<mkdir dir="${dir.dist}" />
	</target>


	<target name="compile" depends="init">
		<javac srcdir="${dir.src}" destdir="${dir.classes}" debug="on">
			<classpath>
				<path refid="path.compile" />
			</classpath>
		</javac>
	</target>
	<target name="package" depends="compile">
		<jar destfile="${dir.dist}/jcc-sip.jar">
			<fileset dir="${dir.classes}" />
		</jar>
	</target>
</project>


<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<artifactId>mobicents-all-servers-checkout</artifactId>
	<groupId>org.mobicents</groupId>
	<version>1.0</version>
	
	<properties>
		<checkout.basedir>${basedir}/target/servers/</checkout.basedir>
		<checkout.username>mobicents-read-only</checkout.username>
		<checkout.password></checkout.password>
		<jainslee.scmVersion>HEAD</jainslee.scmVersion>
		<media.scmVersion>HEAD</media.scmVersion>
		<sippresence.scmVersion>HEAD</sippresence.scmVersion>
		<sipservlets.scmVersion>HEAD</sipservlets.scmVersion>
	</properties>
	
	<profiles>
	<profile>
	<id>checkout</id>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>jain-slee-checkout</id>
						<goals>
							<goal>checkout</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<scmVersion>${jainslee.scmVersion}</scmVersion>
							<scmVersionType>revision</scmVersionType>
							<skipCheckoutIfExists>true</skipCheckoutIfExists>
							<checkoutDirectory>
								${checkout.basedir}/jain-slee
							</checkoutDirectory>
							<connectionUrl>
								scm:svn:http://mobicents.googlecode.com/svn/trunk/servers/jain-slee
							</connectionUrl>
							<username>${checkout.username}</username>
							<password>${checkout.password}</password>
						</configuration>
					</execution>
					<execution>
						<id>media-checkout</id>
						<goals>
							<goal>checkout</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<scmVersion>${media.scmVersion}</scmVersion>
							<scmVersionType>revision</scmVersionType>
							<skipCheckoutIfExists>true</skipCheckoutIfExists>
							<checkoutDirectory>
								${checkout.basedir}/media
							</checkoutDirectory>
							<connectionUrl>
								scm:svn:http://mobicents.googlecode.com/svn/trunk/servers/media
							</connectionUrl>
							<username>${checkout.username}</username>
							<password>${checkout.password}</password>
						</configuration>
					</execution>
					<execution>
						<id>sip-presence-checkout</id>
						<goals>
							<goal>checkout</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<scmVersion>${sippresence.scmVersion}</scmVersion>
							<scmVersionType>revision</scmVersionType>
							<skipCheckoutIfExists>true</skipCheckoutIfExists>
							<checkoutDirectory>
								${checkout.basedir}/sip-presence
							</checkoutDirectory>
							<connectionUrl>
								scm:svn:http://mobicents.googlecode.com/svn/trunk/servers/sip-presence
							</connectionUrl>
							<username>${checkout.username}</username>
							<password>${checkout.password}</password>
						</configuration>
					</execution>
					<execution>
						<id>sip-servlets-checkout</id>
						<goals>
							<goal>checkout</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<scmVersion>${sipservlets.scmVersion}</scmVersion>
							<scmVersionType>revision</scmVersionType>
							<skipCheckoutIfExists>true</skipCheckoutIfExists>
							<checkoutDirectory>
								${checkout.basedir}/sip-servlets
							</checkoutDirectory>
							<connectionUrl>
								scm:svn:http://mobicents.googlecode.com/svn/tags/sip-servlets/release-0.4.1
							</connectionUrl>
							<username>${checkout.username}</username>
							<password>${checkout.password}</password>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	</profile>
	<profile>
		<id>update</id>
		<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>jain-slee-update</id>
						<goals>
							<goal>update</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<basedir>
								${checkout.basedir}/jain-slee
							</basedir>
							<scmVersion>${jainslee.scmVersion}</scmVersion>
							<scmVersionType>revision</scmVersionType>
							<connectionUrl>
								scm:svn:http://mobicents.googlecode.com/svn/trunk/servers/jain-slee
							</connectionUrl>
							<username>${checkout.username}</username>
							<password>${checkout.password}</password>
						</configuration>
					</execution>
					<execution>
						<id>media-update</id>
						<goals>
							<goal>update</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<basedir>
								${checkout.basedir}/media
							</basedir>
							<scmVersion>${media.scmVersion}</scmVersion>
							<scmVersionType>revision</scmVersionType>
							<connectionUrl>
								scm:svn:http://mobicents.googlecode.com/svn/trunk/servers/media
							</connectionUrl>
							<username>${checkout.username}</username>
							<password>${checkout.password}</password>
						</configuration>
					</execution>
					<execution>
						<id>sip-presence-update</id>
						<goals>
							<goal>update</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<basedir>
								${checkout.basedir}/sip-presence
							</basedir>
							<scmVersion>${sippresence.scmVersion}</scmVersion>
							<scmVersionType>revision</scmVersionType>
							<connectionUrl>
								scm:svn:http://mobicents.googlecode.com/svn/trunk/servers/sip-presence
							</connectionUrl>
							<username>${checkout.username}</username>
							<password>${checkout.password}</password>
						</configuration>
					</execution>
					<execution>
						<id>sip-servlets-update</id>
						<goals>
							<goal>update</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<basedir>
								${checkout.basedir}/sip-servlets
							</basedir>
							<scmVersion>${sipservlets.scmVersion}</scmVersion>
							<scmVersionType>revision</scmVersionType>
							<connectionUrl>
								scm:svn:http://mobicents.googlecode.com/svn/tags/sip-servlets/release-0.4.1
							</connectionUrl>
							<username>${checkout.username}</username>
							<password>${checkout.password}</password>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	</profile>
	</profiles>
</project>
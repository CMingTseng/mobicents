<?xml version="1.0" encoding="utf-8"?>
<project name="XMPPResourceAdaptor" default="build-and-deploy-ra">

	<property name="compile.as.debug" value="true" />
		
	<property name="mobicents.home" value="${ant.file.AsteriskResourceAdaptor}/../../../core" />	
	<!--import file="${mobicents.home}/xml/ant/mobicents-ant-common-properties.xml" /-->
	<import file="${mobicents.home}/xml/ant/mobicents-ant-common-ra.xml" />

	<property name="ra.name" value="xmpp" />
	<property name="ra.entity" value="XMPPRA" />
	<property name="ra.id" value="${ant.project.name}#org.mobicents#2.0" />

	<path id="ra.classpath">
		<path refid="mobicents.core.classpath" />
		<path refid="mobicents.ra.xmppra.classpath" />
	</path>

	<fileset id="ra.libs.ratype" dir="lib">
		<include name="smack.jar" />
		<include name="smackx.jar" />
	</fileset>

	<target name="javadoc">
		<mkdir dir='docs' />
		<javadoc packagenames="org.mobicents.slee.resource.xmpp" destdir="docs" use="true" splitindex="true" windowtitle="Mobicents XMPP Resource Adaptor" public="true" author="true" version="true" defaultexcludes="yes" additionalparam="-breakiterator">
			<sourcepath>
				<pathelement path="ra/src" />
				<pathelement path="ratype/events/src" />
				<pathelement path="ratype/src" />
			</sourcepath>
			<classpath refid="ra.classpath" />

			<header>
				<![CDATA[
					<b> Mobicents XMPP Resource Adaptor v2.1 </b>
				]]>
			</header>
		<bottom>
			<![CDATA[
					<font size="-1">
			<a href="mobicents.dev.java.net">Mobicents Website</a>
			<br>
				<a href="http://forums.java.net/jive/category.jspa?categoryID=36">Submit a bug report or feature request. </a>
				<br>
				</font>
				]]>
			</bottom>
		</javadoc>
	</target>

</project>


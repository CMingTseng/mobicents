<?xml version="1.0" encoding="utf-8"?>
<project name="Release_build" default="deploy">

  <property name="home" value="${ant.file.Release_build}/../" />

  <property environment="env"/>
  <property name="deploy.dir" value="${env.JBOSS_HOME}/server/default/deploy/" />
  
  <target name="deploy-jmx">
    <ant antfile="${home}../../resources/http-servlet/du-management.xml" target="deploy-jmx" inheritAll="false" />
		<copy overwrite="true" todir="${deploy.dir}" file="${home}../../resources/http-servlet/mobicents.war" />
  </target>

  <target name="undeploy-jmx">
		<delete file="${deploy.dir}/mobicents.war" />
    <ant antfile="${home}../../resources/http-servlet/du-management.xml" target="undeploy-jmx" inheritAll="false" />
  </target>

  <target name="deploy">
    <ant antfile="${home}../../resources/http-servlet/du-management.xml" target="deploy" inheritAll="false" />
		<copy overwrite="true" todir="${deploy.dir}" file="${home}../../resources/http-servlet/mobicents.war" />
  </target>

  <target name="undeploy">
		<delete file="${deploy.dir}/mobicents.war" />
    <ant antfile="${home}../../resources/http-servlet/du-management.xml" target="undeploy" inheritAll="false" />
  </target>

</project>

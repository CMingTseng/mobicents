<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.mobicents</groupId>
		<artifactId>mobicents-parent</artifactId>
		<version>1.2.0-beta-2-SNAPSHOT</version>
	</parent>

	<artifactId>ejb3-proxy</artifactId>
	<packaging>jar</packaging>
	<name>Mobicents :: ejb3-proxy</name>
	<url>http://mobicents.dev.java.net</url>

   <build>
	<sourceDirectory>../../src/main/java/</sourceDirectory>
	<plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
			<configuration>
				<source>1.5</source>
				<target>1.5</target>
				<includes>
					<include>org/mobicents/slee/connector/proxy/**</include>
				</includes>
			</configuration>
		</plugin>
        <plugin>
             <groupId>org.apache.maven.plugins</groupId>
             <artifactId>maven-jar-plugin</artifactId>
             <version>2.1</version>
             <configuration>
		<maven.jar.final.name>SleeConnectionProxy.ejb3</maven.jar.final.name>
             </configuration>
         </plugin>
	</plugins>
	<resources>
		<resource>
			<directory>../../src/main/java/</directory>
			<includes>
				<include>**/ejbconnection-proxy.properties</include>
			</includes>
		</resource>
	</resources>	
   </build>

</project>

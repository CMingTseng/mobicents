<?xml version="1.0" encoding="UTF-8"?>

<project name="TTSResourceAdaptor" default="build-and-deploy-ra">

	<property name="mobicents.home" value="../.." />
	<property name="compile.as.debug" value="false" />
	<!--import file="${mobicents.home}/xml/ant/mobicents-ant-common-properties.xml" /-->
	<import file="${mobicents.home}/xml/ant/mobicents-ant-common-ra.xml" />

	<property name="ra.name" value="tts" />
	<property name="ra.entity" value="ttsRA" />
	<property name="ra.id" value="TTSResourceAdaptor#org.mobicents#0.1" />

	<path id="ra.classpath">
		<path refid="mobicents.core.classpath" />
		<path refid="mobicents.ra.ttsra.classpath" />
	</path>

	<fileset id="ra.libs.ra" dir="lib">
		<include name="*.jar" />
		<include name="*.txt" />
	</fileset>

	<fileset id="jars.to.copy.to.jboss" dir="${ant.file.TTS_RA_Project}/../lib">
		<exclude name="mobicents_lib.jar" />
		<include name="*.jar" />
	</fileset>

</project>

<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
>
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<artifactId>sh-client-parent</artifactId>
		<groupId>org.mobicents.resources.diameter</groupId>
		<version>1.3.0-SNAPSHOT</version>
	</parent>

	<artifactId>sh-client-ra-DU</artifactId>

	<name>Mobicents :: Resources :: ${pom.artifactId}</name>

	<dependencies>
		<!-- dependencies: should be commented if present in some upper pom -->
		<dependency>
			<artifactId>base-events</artifactId>
			<groupId>org.mobicents.resources.diameter</groupId>
			<version>${pom.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>sh-server-events</artifactId>
			<groupId>org.mobicents.resources.diameter</groupId>
			<version>${pom.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>base-ratype</artifactId>
			<groupId>org.mobicents.resources.diameter</groupId>
			<version>${pom.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.mobicents.diameter</groupId>
			<artifactId>mobicents-diameter-mux-jar</artifactId>
			<version>1.0.0.BETA1-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.mobicents.resources.diameter</groupId>
			<artifactId>jdiameter-api</artifactId>
			<version>1.5.0.1-build183</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.mobicents.resources.diameter</groupId>
			<artifactId>jdiameter-impl</artifactId>
			<version>1.5.0.1-build183</version>
			<scope>runtime</scope>
		</dependency>
		<!-- components -->
		<dependency>
			<groupId>org.mobicents.resources.diameter</groupId>
			<artifactId>sh-client-events</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.resources.diameter</groupId>
			<artifactId>sh-client-ratype</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mobicents.resources.diameter</groupId>
			<artifactId>sh-client-ra</artifactId>
			<version>${pom.version}</version>
		</dependency>
	
		
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.mobicents.tools</groupId>
				<artifactId>maven-du-plugin</artifactId>
				<version>${mobicents.tools.mavenplugin.du.version}</version>
				<extensions>true</extensions>
				<configuration />
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-DU</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy
									overwrite="true"
									file="target/${project.build.finalName}.jar"
									todir="${jboss.home}/server/${node}/deploy"
								/>
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>undeploy-DU</id>
						<phase>clean</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete file="${jboss.home}/server/${node}/deploy/${project.build.finalName}.jar" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
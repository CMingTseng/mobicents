<?xml version="1.0" encoding="UTF-8"?>

<project name="Mobicents Ant Management" basedir="..">
	
	<!-- PATHS -->
	<property environment="system"/>
	<property name="jboss.home" value="${system.JBOSS_HOME}" />
		
	<property name="classes.tasks" value="classes"/>
	<property name="jars" value="jars"/>
	<property name="lib" value="lib"/>

	<!-- CLASSPATH -->

	<path id="project.class.path">
	   	<pathelement location="${jboss.home}/server/all/deploy/mobicents.sar"/>
		<pathelement location="${jboss.home}/server/all/deploy/mobicents.sar/slee.jar"/>
	</path>
	
	<target name="management-init">
		<taskdef name="sbbjar" classname="org.mobicents.ant.SbbJar" classpath="${lib}/slee-ant-tasks.jar"/>
		<taskdef name="eventjar" classname="org.mobicents.ant.EventJar" classpath="${lib}/slee-ant-tasks.jar"/>
		<taskdef name="profilespecjar" classname="org.mobicents.ant.ProfileSpecJar" classpath="${lib}/slee-ant-tasks.jar"/>
		<taskdef name="deployablejar" classname="org.mobicents.ant.DeployableJar" classpath="${lib}/slee-ant-tasks.jar"/>
    	<taskdef name="resourceadaptortypejar" classname="org.mobicents.ant.ResourceAdaptorTypeJar" classpath="${lib}/slee-ant-tasks.jar"/>
    	<taskdef name="resourceadaptorjar" classname="org.mobicents.ant.ResourceAdaptorJar" classpath="${lib}/slee-ant-tasks.jar"/>

		<taskdef name="slee-management" classname="org.mobicents.ant.MobicentsManagementAntTask">
			<classpath>  
		   		<pathelement path="${jars}/mobicents-cli.jar"/>
	   		</classpath>
		</taskdef>
	
    <echo message="Mobicents SLEE Management tasks defined"/>
		
    </target>
</project>
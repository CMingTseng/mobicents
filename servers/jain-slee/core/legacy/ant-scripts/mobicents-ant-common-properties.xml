<?xml version="1.0" encoding="UTF-8"?>

<project name="Mobicents_Ant_Common_Properties__Paths_and_Targets">

	<property name="jnpHost" value="127.0.0.1" />
	<property name="jnpPort" value="1099" />
	<property environment="system" />
	<property name="jboss.home" value="${system.JBOSS_HOME}" />
	<property name="node" value="default" />
	<property name="jboss.deploy" value="${jboss.home}/server/${node}/deploy" />

	<!-- CORE RELATED -->

	<path id="mobicents.core.classpath">
		<!--pathelement location="${mobicents.home}/lib/slee_1_1.jar" />
		<pathelement location="${jboss.home}/client/log4j.jar" />
		<pathelement location="${mobicents.home}/lib/dom4j.jar" />
		<pathelement location="${jboss.home}/lib/jboss-jmx.jar" />
		<pathelement location="${jboss.home}/client/jboss-j2ee.jar" />
		<pathelement location="${jboss.home}/lib/jboss-common.jar" />
		<pathelement location="${jboss.home}/client/concurrent.jar" /-->
		<fileset dir="${jboss.deploy}/mobicents.sar/lib">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${jboss.home}/client">
			<include name="*.jar" />
		</fileset>
	</path>

	<condition property="file_url" value="file:/">
		<os family="windows" />
	</condition>
	<!-- Property already set on windows platform -->
	<property name="file_url" value="file://" />

	<pathconvert targetos="unix" property="jboss.home.standard">
		<path description="To use te same stile for every url file" path="${jboss.home}" />
	</pathconvert>
	<pathconvert targetos="unix" property="mobicents.home.standard">
		<path description="To use te same stile for every url file" path="${mobicents.home}" />
	</pathconvert>

	<!-- CLASSPATH -->

	<path id="anttasks.class.path">
		<fileset dir="${ant.file.Mobicents_Ant_Common_Properties__Paths_and_Targets}/../../../../tools/ant-tasks/target">
			<include name="*.jar" />
		</fileset>
		<path refid="mobicents.core.classpath" />
	</path>

	<target name="init-common">
		<echo>WARNING!!! Mobicents TOOLS: ant tasks and cli must be compiled prior this target invocation</echo>
		<taskdef name="sbbjar" classname="org.mobicents.ant.SbbJar">
			<classpath>
				<path refid="anttasks.class.path"/>
			</classpath>
		</taskdef>
		<taskdef name="eventjar" classname="org.mobicents.ant.EventJar">
			<classpath>
				<path refid="anttasks.class.path"/>
			</classpath>
		</taskdef>
		<taskdef name="profilespecjar" classname="org.mobicents.ant.ProfileSpecJar">
			<classpath>
				<path refid="anttasks.class.path"/>
			</classpath>
		</taskdef>
		<taskdef name="deployablejar" classname="org.mobicents.ant.DeployableJar">
			<classpath>
				<path refid="anttasks.class.path"/>
			</classpath>
		</taskdef>
		<taskdef name="resourceadaptortypejar" classname="org.mobicents.ant.ResourceAdaptorTypeJar">
			<classpath>
				<path refid="anttasks.class.path"/>
			</classpath>
		</taskdef>
		<taskdef name="resourceadaptorjar" classname="org.mobicents.ant.ResourceAdaptorJar">
			<classpath>
				<path refid="anttasks.class.path"/>
			</classpath>
		</taskdef>
		<taskdef name="sbbconfigurator" classname="org.mobicents.ant.sbbconfigurator.Task">
			<classpath>
				<path refid="anttasks.class.path"/>
			</classpath>
		</taskdef>
		<taskdef name="slee-management" classname="org.mobicents.ant.MobicentsManagementAntTask">
			<classpath>
				<path refid="anttasks.class.path"/>
			</classpath>
		</taskdef>
	</target>
</project>

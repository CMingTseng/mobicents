<?xml version="1.0" encoding="UTF-8"?>

<!-- 
/*****************************************************************
 *                                                               *
 *  Mobicents Media Gateway                                      *
 *                                                               *
 *****************************************************************/
-->


<server>            
    <!-- ANNOUNCEMENT -->
    <mbean code="org.mobicents.media.server.impl.ann.AnnTrunkManagement" 
           name="media.mobicents:trunk=announcement"> 
        <attribute name="JndiName">media/trunk/Announcement</attribute>
        <attribute name="BindAddress">${jboss.bind.address}</attribute>
        <attribute name="Channels">10</attribute>
        <attribute name="Jitter">60</attribute>
        <attribute name="PacketizationPeriod">20</attribute>
        <attribute name="PortRange">1024-65535</attribute>
        <attribute name="PCMA">true</attribute>
    </mbean>
    
    <!-- PACKET RELAY -->
    <mbean code="org.mobicents.media.server.impl.packetrelay.PRTrunkManagement" 
           name="media.mobicents:trunk=packet-relay"> 
        <attribute name="JndiName">media/trunk/PacketRelay</attribute>
        <attribute name="BindAddress">${jboss.bind.address}</attribute>
        <attribute name="Channels">10</attribute>
        <attribute name="Jitter">60</attribute>
        <attribute name="PacketizationPeriod">20</attribute>
        <attribute name="PortRange">1024-65535</attribute>
        <attribute name="PCMA">true</attribute>
    </mbean>
    
    <!-- LOOPBACK ENDPOINT -->
    <mbean code="org.mobicents.media.server.impl.test.LoopEndpointManagement" 
           name="media.mobicents:trunk=loopback"> 
        <attribute name="JndiName">media/test/Loopback/1</attribute>
        <attribute name="BindAddress">${jboss.bind.address}</attribute>
        <attribute name="Jitter">60</attribute>
        <attribute name="PacketizationPeriod">20</attribute>
        <attribute name="PortRange">1024-65535</attribute>
        <attribute name="PCMA">true</attribute>
    </mbean>
    
    <!-- CONF ENDPOINT -->
    <mbean code="org.mobicents.media.server.impl.conference.ConfEndpointManagement" 
           name="media.mobicents:endpoint=conf"> 
        <attribute name="JndiName">media/trunk/Cnf/1</attribute>
        <attribute name="BindAddress">${jboss.bind.address}</attribute>
        <attribute name="Jitter">60</attribute>
        <attribute name="PacketizationPeriod">20</attribute>
        <attribute name="PortRange">1024-65535</attribute>
        <attribute name="PCMA">true</attribute>
    </mbean>
</server>

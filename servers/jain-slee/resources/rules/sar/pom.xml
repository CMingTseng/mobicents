    	<dependency>
      		<groupId>org.drools</groupId>
      		<artifactId>drools-core</artifactId>
      		<exclusions>
      		<exclusion>
				 <groupId>jung</groupId>
      			 <artifactId>jung</artifactId>
      		</exclusion>

<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<artifactId>mobicents</artifactId>
		<groupId>org.mobicents</groupId>
		<version>1.2.0.BETA3-SNAPSHOT</version>
	</parent>

	<artifactId>xcap-client-parent</artifactId>
	<groupId>org.mobicents.resources</groupId>
	<version>1.2.0.BETA3-SNAPSHOT</version>

	<name>Mobicents :: Resources :: ${pom.artifactId}</name>

	<properties>
		<serverHost>127.0.0.1</serverHost>
		<serverPort>8080</serverPort>
		<xcapRoot>/mobicents</xcapRoot>	
	</properties>
	
	<modules>
		<module>events</module>
		<module>ratype</module>
		<module>ra</module>
		<module>du</module>
	</modules>

	<profiles>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true"
											todir="${basedir}/../../release/${release.name}/resources/xcap-client">
											<fileset
												dir="${basedir}/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>

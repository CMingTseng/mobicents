<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>

	<parent>
		<artifactId>mobicents</artifactId>
		<groupId>org.mobicents</groupId>
		<version>1.2.0.BETA3-SNAPSHOT</version>
	</parent>

	<artifactId>parent</artifactId>
	<groupId>org.mobicents.servers.xdm</groupId>
	<version>${mobicents.server.xdm.version}</version>

	<properties>
		<release.name>
			${release.name.prefix}${parent.version}${release.name.suffix}
		</release.name>
	</properties>

	<modules>
		<module>../../resources/http-servlet</module>
		<module>commons</module>
		<module>client</module>
		<module>server/appusagecache/events</module>
		<module>server/appusagecache/ratype</module>
		<module>server/appusagecache/ra</module>
		<module>server/appusagecache/du</module>
		<module>server/datasource/events</module>
		<module>server/datasource/ratype</module>
		<module>server/datasource/ra/jdbc</module>
		<module>server/datasource/du</module>
		<module>server/core/sbb</module>
		<module>server/core/du</module>
		<module>appusages/oma-pres-rules/server/sbb</module>
		<module>appusages/oma-pres-rules/server/du</module>
		<module>appusages/pres-rules/client</module>
		<module>appusages/pres-rules/server/sbb</module>
		<module>appusages/pres-rules/server/du</module>
		<module>appusages/resource-lists/client</module>
		<module>appusages/resource-lists/server/sbb</module>
		<module>appusages/resource-lists/server/du</module>
		<module>appusages/rls-services/server/sbb</module>
		<module>appusages/rls-services/server/du</module>
		<module>appusages/xcap-caps/client</module>
		<module>appusages/xcap-caps/server/sbb</module>
		<module>appusages/xcap-caps/server/du</module>
	</modules>

	<profiles>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>false</inherited>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy overwrite="true"
											todir="${basedir}/../../release/${release.name}/servers/xdm">
											<fileset
												dir="${basedir}/server/appusagecache/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
											<fileset
												dir="${basedir}/server/datasource/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
											<fileset
												dir="${basedir}/server/core/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
											<fileset
												dir="${basedir}/appusages/oma-pres-rules/server/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
											<fileset
												dir="${basedir}/appusages/pres-rules/server/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
											<fileset
												dir="${basedir}/appusages/resource-lists/server/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
											<fileset
												dir="${basedir}/appusages/rls-services/server/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
											<fileset
												dir="${basedir}/appusages/xcap-caps/server/du/target">
												<include name="**.jar" />
												<include name="*.xml" />
												<include
													name="*.properties" />
											</fileset>
										</copy>
										<copy overwrite="true"
											file="${basedir}/server/appusagecache/du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/servers/xdm/appusagecache-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/server/datasource/du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/servers/xdm/datasource-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/server/core/du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/servers/xdm/core-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/appusages/oma-pres-rules/server/du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/servers/xdm/oma-pres-rules-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/appusages/pres-rules/server/du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/servers/xdm/pres-rules-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/appusages/resource-lists/server/du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/servers/xdm/resource-lists-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/appusages/rls-services/server/du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/servers/xdm/rls-services-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/appusages/xcap-caps/server/du/target/build.xml"
											tofile="${basedir}/../../release/${release.name}/servers/xdm/xcap-caps-du-management.xml" />
										<copy overwrite="true"
											file="${basedir}/release/build.xml"
											todir="${basedir}/../../release/${release.name}/servers/xdm" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
